<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="form" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle">
    <label>Date</label>
    <input type="date" class="form-control" name="postDate">
    <label>Post</label>
    <textarea name="postBody" class="form-control" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-dark" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>
